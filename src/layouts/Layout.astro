---
import "../styles/global.css";
import { ToastProvider } from "../components/ToastProvider";
import { NetworkStatus } from "../components/NetworkStatus";
import { ReloadPrompt } from "../components/ReloadPrompt";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;

// Sprawdź stan użytkownika - dostępne przez middleware
const user = Astro.locals.user || null;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/icons/apple-touch-icon.png" />
    <meta name="theme-color" media="(prefers-color-scheme: light)" content="#ffffff" />
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#09090b" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline>
      // eslint-disable-next-line prettier/prettier
      // Inicjalizacja motywu przed renderowaniem, aby uniknąć flashowania
      (function () {
        const theme = localStorage.getItem("theme") || "system";
        if (theme === "dark" || (theme === "system" && window.matchMedia("(prefers-color-scheme: dark)").matches)) {
          document.documentElement.classList.add("dark");
        }
      })();
    </script>
  </head>
  <body>
    <slot {user} />
    <ReloadPrompt client:load />
    <NetworkStatus client:load />
    <ToastProvider client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
