---
import "../styles/global.css";
import { NetworkStatus } from "../components/NetworkStatus";
import { ReloadPrompt } from "../components/ReloadPrompt";
import { ToastProvider } from "../components/ToastProvider";

interface Props {
  title?: string;
}

const { title = "MacroSpy - Logowanie" } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/icons/apple-touch-icon.png" />
    <meta name="theme-color" media="(prefers-color-scheme: light)" content="#ffffff" />
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#09090b" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline>
      // eslint-disable-next-line prettier/prettier
      // Inicjalizacja motywu przed renderowaniem, aby uniknąć flashowania
      (function () {
        const theme = localStorage.getItem("theme") || "system";
        if (theme === "dark" || (theme === "system" && window.matchMedia("(prefers-color-scheme: dark)").matches)) {
          document.documentElement.classList.add("dark");
        }
      })();
    </script>
  </head>
  <body>
    <div class="min-h-screen bg-background flex flex-col">
      {/* Logo w górnej części */}
      <header class="flex justify-center pt-8 pb-4 md:pt-12 md:pb-8">
        <div class="flex items-center space-x-2">
          <img src="/favicon.svg" alt="Logo MacroSpy" class="w-8 h-8 invert dark:invert-0" />
          <h1 class="text-xl md:text-2xl font-bold">MacroSpy</h1>
        </div>
      </header>

      {/* Główny kontener - wyśrodkowany formularz */}
      <main class="flex-1 flex items-center justify-center px-4 pb-8">
        <div class="w-full max-w-md">
          <slot />
        </div>
      </main>
    </div>
    <ReloadPrompt client:load />
    <NetworkStatus client:load />
    <ToastProvider client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
